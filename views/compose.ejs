<%- include('partials/header.ejs') %>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="Give it a very good title...">
    </div>

    <div class="form-group">
        <label for="post">Post</label>
        <textarea class="form-control" name="postBody" cols="30" rows="10" placeholder="Compose anything you can think of..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>
</form>

